mixin section-nav(data)
    .section-nav
        .section-nav__item.section-nav__item_1
            a.section-nav__link(href="#")
                != pugHelpers.Icon.call(locals, {iconName: 'insured-persons-icon', className: 'section-nav__icon'})
                .section-nav__text Застрахованным <br/>лицам
                .section-nav__button.button.button_style_second
                    .button__text Перейти
                    != pugHelpers.Icon.call(locals, {iconName: 'arrow-right-icon', className: 'button__arrow'})

        .section-nav__item.section-nav__item_2.section-nav__item_active
            a.section-nav__link(href="#")
                != pugHelpers.Icon.call(locals, {iconName: 'medical-icon', className: 'section-nav__icon'})
                .section-nav__text Медицинским <br/>организациям
                .section-nav__button.button_style_second
                    .button__text Перейти
                    != pugHelpers.Icon.call(locals, {iconName: 'arrow-right-icon', className: 'button__arrow'})

        .section-nav__item.section-nav__item_3
            a.section-nav__link(href="#")
                != pugHelpers.Icon.call(locals, {iconName: 'insurance-org-icon', className: 'section-nav__icon'})
                .section-nav__text Страховым <br/>организациям
                .section-nav__button.button_style_second
                    .button__text Перейти
                    != pugHelpers.Icon.call(locals, {iconName: 'arrow-right-icon', className: 'button__arrow'})
